<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChatIndividualActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="715dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="42dp" android:id="@+id/txt_nombre_chat" android:background="#52738A"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="595dp" android:id="@+id/rv_chat_individual" android:background="@mipmap/fondo"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="72dp" app:srcCompat="@android:drawable/bottom_bar"
                android:id="@+id/imageView" android:background="@android:color/darker_gray"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>