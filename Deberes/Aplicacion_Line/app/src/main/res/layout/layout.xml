<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal" android:id="@+id/chats_layout">


    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" tools:srcCompat="@drawable/line"
            android:id="@+id/img_chats"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="62dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="TextView"
                    android:layout_width="183dp"
                    android:layout_height="match_parent" android:id="@+id/txt_nombre"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/txt_hora"/>
        </LinearLayout>

        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txt_mensaje"/>
    </LinearLayout>
</LinearLayout>
