<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GestionJugadoresActivity" android:background="@mipmap/vertical">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteX="76dp"
            android:id="@+id/text_nombreJugador" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/text_nombreCamiseta"
            tools:layout_editor_absoluteX="76dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/text_numCamiseta"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteX="78dp"
            android:id="@+id/text_poder" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/text_nombreCamiseta"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            tools:layout_editor_absoluteX="76dp" android:id="@+id/text_numCamiseta" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/text_nombreJugador"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            tools:layout_editor_absoluteX="78dp" android:id="@+id/text_fechaIngreso" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/text_poder"/>
    <Button
            android:text="@string/btn_eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_eliminar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.817"
            android:layout_marginStart="76dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="76dp"/>
    <Button
            android:text="@string/btn_actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_actualizar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.817"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/btn_eliminar" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.284"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            tools:layout_editor_absoluteX="78dp" android:id="@+id/text_goles" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/text_fechaIngreso"/>
</android.support.constraint.ConstraintLayout>