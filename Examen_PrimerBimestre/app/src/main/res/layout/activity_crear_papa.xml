<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearPapaActivity" android:background="@mipmap/vertical">

    <EditText
            android:layout_width="270dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/text_nombreEquipo" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.296"
            android:layout_marginTop="76dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="264dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/text_liga" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="18sp" app:layout_constraintHorizontal_bias="0.297"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/text_nombreEquipo"/>
    <EditText
            android:layout_width="255dp"
            android:layout_height="60dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/text_fechaEquipo" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.278"
            android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/text_liga"/>
    <TextView
            android:text="@string/text_nombreEquipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/text_nombreEquipo"
            app:layout_constraintEnd_toEndOf="@+id/text_nombreEquipo" app:layout_constraintHorizontal_bias="0.053"
            android:textSize="18sp" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="166dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/text_numeroCopas" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.209" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/text_fechaEquipo" android:layout_marginTop="64dp"/>
    <TextView
            android:text="@string/text_liga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/text_liga"
            app:layout_constraintEnd_toEndOf="@+id/text_liga" app:layout_constraintHorizontal_bias="0.048"
            android:textSize="18sp" android:layout_marginTop="140dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/text_fechaEquipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/text_fechaEquipo"
            app:layout_constraintEnd_toEndOf="@+id/text_fechaEquipo" app:layout_constraintHorizontal_bias="0.0"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/text_fechaEquipo" android:layout_marginBottom="12dp"/>
    <TextView
            android:text="@string/text_numeroCopas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintStart_toStartOf="@+id/text_numeroCopas"
            app:layout_constraintEnd_toEndOf="@+id/text_numeroCopas" app:layout_constraintHorizontal_bias="0.009"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/text_numeroCopas" android:layout_marginBottom="24dp"/>
    <CheckBox
            android:text="@string/check_campeon"
            android:layout_width="115dp"
            android:layout_height="43dp"
            android:id="@+id/check_campeon" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.176" android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_numeroCopas"
    />
    <Button
            android:text="Guardar"
            android:layout_width="108dp"
            android:layout_height="53dp"
            android:id="@+id/btn_guardar" android:background="#3F51B5"
            android:textSize="18sp" android:textColorLink="#F8EDED" android:textColor="#F5EDED"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.425"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/check_campeon"/>
</android.support.constraint.ConstraintLayout>