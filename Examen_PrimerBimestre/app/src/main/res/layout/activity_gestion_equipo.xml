<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GestionEquipoActivity" android:background="@mipmap/vertical">
    <EditText
            android:layout_width="243dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/text_nombreJugador" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
    <EditText
            android:layout_width="234dp"
            android:layout_height="51dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/text_liga" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/text_nombreJugador" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
    <EditText
            android:layout_width="233dp"
            android:layout_height="43dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/text_fechaEquipo" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/text_liga"/>
    <EditText
            android:layout_width="127dp"
            android:layout_height="42dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/text_numeroCopas"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="84dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/text_fechaEquipo" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <CheckBox
            android:text="campeon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_Campeon" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/text_numeroCopas"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_fechaEquipo" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.173"
            app:layout_constraintVertical_bias="0.096"/>
    <Button
            android:text="ELIMINAR"
            android:layout_width="107dp"
            android:layout_height="72dp"
            android:id="@+id/btn_eliminar"
            android:layout_marginTop="300dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_actualizar" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.8"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_gestionJugadores"
            app:layout_constraintVertical_bias="0.806"/>
    <Button
            android:text="ACTUALIZAR"
            android:layout_width="115dp"
            android:layout_height="73dp"
            android:id="@+id/btn_actualizar"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_crearJugador" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.962"
            android:layout_marginEnd="88dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="88dp"/>
    <Button
            android:text="GESTIONAR JUGADORES"
            android:layout_width="114dp"
            android:layout_height="80dp"
            android:id="@+id/btn_gestionJugadores"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/btn_crearJugador"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.692"
    />
    <Button
            android:text="CREAR JUGADOR"
            android:layout_width="106dp"
            android:layout_height="78dp"
            android:id="@+id/btn_crearJugador"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="88dp" android:layout_marginRight="88dp"/>
</android.support.constraint.ConstraintLayout>