<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GestionJugadoresActivity" android:background="@mipmap/sakura">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/text_nombreJugador"
            tools:layout_editor_absoluteY="56dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/text_numCamiseta" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.508"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/text_nombreCamiseta"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/text_nombreJugador"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/text_poder" android:layout_marginRight="8dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/text_poder"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/text_numCamiseta"
            android:layout_marginEnd="112dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="112dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/text_numCamiseta"
            android:layout_marginTop="56dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="112dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="112dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/text_fechaIngreso"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/text_nombreCamiseta"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/text_goles" android:layout_marginRight="8dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/text_goles"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/text_poder"
            android:layout_marginEnd="112dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="112dp"/>
    <Button
            android:text="@string/btn_eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_eliminar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.881"
            android:layout_marginStart="196dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="196dp"/>
    <Button
            android:text="@string/btn_actualizar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_actualizar" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.861"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/btn_eliminar" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.38"/>
</android.support.constraint.ConstraintLayout>