<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearPapaActivity" android:background="@mipmap/sakura">

    <EditText
            android:layout_width="270dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/text_nombreEquipo" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.694"
            android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent"
    />
    <EditText
            android:layout_width="264dp"
            android:layout_height="47dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/text_liga" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="144dp" android:layout_marginRight="144dp"
            android:textSize="18sp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/text_nombreEquipo"/>
    <EditText
            android:layout_width="262dp"
            android:layout_height="36dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/text_fechaEquipo" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.699"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/text_liga"/>
    <TextView
            android:text="Nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="18sp"
            android:layout_marginStart="36dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/text_nombreEquipo"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.071"
            android:layout_marginTop="28dp" app:layout_constraintTop_toTopOf="parent"
    />
    <EditText
            android:layout_width="183dp"
            android:layout_height="31dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/text_numeroCopas" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.595" android:textSize="18sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/text_fechaEquipo"/>
    <TextView
            android:text="Liga:"
            android:layout_width="42dp"
            android:layout_height="35dp"
            android:id="@+id/textView3"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="44dp" android:layout_marginStart="44dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/text_liga"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="48dp"/>
    <TextView
            android:text="Fecha de creacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/text_fechaEquipo"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.26" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="copas internas"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:id="@+id/textView5"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/text_numeroCopas" android:layout_marginEnd="56dp"
            android:layout_marginRight="56dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.296"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
    />
    <CheckBox
            android:text="CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_campeon" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.512" android:textSize="18sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_numeroCopas" app:layout_constraintVertical_bias="0.168"/>
    <TextView
            android:text="Campeon actual"
            android:layout_width="140dp"
            android:layout_height="19dp"
            android:id="@+id/textView6"
            android:textSize="18sp"
            android:layout_marginStart="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/check_campeon"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.163" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintVertical_bias="0.262"/>
    <Button
            android:text="Guardar"
            android:layout_width="102dp"
            android:layout_height="42dp"
            android:id="@+id/btn_guardar" android:background="#3F51B5"
            android:textSize="18sp" android:textColorLink="#F8EDED" android:textColor="#F5EDED"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.414"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.951"/>
</android.support.constraint.ConstraintLayout>